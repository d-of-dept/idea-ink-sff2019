      #sustainingFuture.list-item.clearfix
        p.list-caption SWITCH 2019
        p.list-title.list-title-10 Sustaining the Future of Humanity
        img.list-chevron.list-chevron-10(src='/images/icon_chevron.svg')
      #poweringCities.list-item.clearfix
        p.list-caption SWITCH 2019
        p.list-title.list-title-11 Powering Cities of the Future
        img.list-chevron.list-chevron-11(src='/images/icon_chevron.svg')
    #browseDB.browse-db.clearfix
      img#dbIllus.dropbox-illus(src='/images/illus_dropbox.png')
      p.db-caption View everything on
      img#dbLink.dropbox-link(src='/images/btn_dropbox.svg')
